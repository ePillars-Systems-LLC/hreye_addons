<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for Employee Request -->
        <record id="seq_employee_request" model="ir.sequence">
            <field name="name">Employee Request</field>
            <field name="code">employee.request</field>
            <field name="prefix">EMP/REQ/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_advance_request" model="ir.sequence">
            <field name="name">Advance Request</field>
            <field name="code">loan.application.number</field>
            <field name="prefix">ADV/REQ/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_resignation_request" model="ir.sequence">
            <field name="name">HR Resignation </field>
            <field name="code">hr.resignation.number</field>
            <field name="prefix">RES/REQ/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
